    <!--
        Added the entity Maintenance.
    -->
    <changeSet id="20200212092800-1" author="jhipster">
        <createTable tableName="maintenance">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start_time" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="end_time" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="duration" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="frequency" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="flow_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_maintenance_flow_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="maintenance" columnName="start_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="maintenance" columnName="end_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="maintenance" columnName="duration" columnDataType="datetime"/>
    </changeSet>

    <changeSet id="20200212092800-1-relations" author="jhipster">

    </changeSet>
